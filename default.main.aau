	//]
	
	text = string.load("/pufa_chapters.txt")
	lines = string.split(text,'\n\r')
 
	console.print(tostring(type(lines)))
	//console.dump(lines)
	
	for(k,v in lines){
		console.print(k,v)
		console.print(string.split(v,'\t')[3])
	}
		
		
	chapters=load_data("/pufa_chapters.txt", "/pufa_answers.txt")
	for(k,v in chapters){
